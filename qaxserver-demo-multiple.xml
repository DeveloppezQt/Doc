<db:programlisting language="cpp">&lt;script language=&quot;javascript&quot;&gt;
function setColor( form )
{
    Ax1.fillColor = form.colorEdit.value;
}

function setWidth( form )
{
    Ax2.lineWidth = form.widthEdit.value;
}
&lt;/script&gt;

