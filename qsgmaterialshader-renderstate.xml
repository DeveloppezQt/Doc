<db:section xml:id="modelViewMatrix">
<db:title>QMatrix4x4 RenderState::modelViewMatrix() const</db:title>
<db:methodsynopsis>
<db:modifier>const</db:modifier>
<db:type>QMatrix4x4</db:type>
<db:methodname>modelViewMatrix</db:methodname>
<db:void/>
