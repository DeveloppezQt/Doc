<db:section xml:id="reversed-prop">
<db:title>reversed : bool</db:title>
<db:fieldsynopsis>
<db:modifier>(Qt property)</db:modifier>
<db:type>bool</db:type>
<db:varname>reversed</db:varname>
<db:synopsisinfo role="access">public</db:synopsisinfo>
