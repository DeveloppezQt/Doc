<db:section xml:id="details">
<db:title>Detailed Description</db:title>
<db:para>Example:</db:para>
<db:programlisting language="qml">TextArea {
    style: TextAreaStyle {
        textColor: &quot;#333&quot;
        selectionColor: &quot;steelblue&quot;
        selectedTextColor: &quot;#eee&quot;
        backgroundColor: &quot;#eee&quot;
    }
}
</db:programlisting>
</db:section>
