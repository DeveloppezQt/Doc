<db:synopsisinfo role="status">active</db:synopsisinfo>
<db:synopsisinfo role="threadsafeness">unspecified</db:synopsisinfo>
</db:fieldsynopsis>
<db:para>The text elide mode of the column. Allowed values are:</db:para>
<db:itemizedlist>
<db:listitem>
<db:para>Text.ElideNone</db:para>
</db:listitem>
<db:listitem>
<db:para>Text.ElideLeft</db:para>
</db:listitem>
<db:listitem>
<db:para>Text.ElideMiddle</db:para>
</db:listitem>
<db:listitem>
<db:para>Text.ElideRight - the default</db:para>
</db:listitem>
</db:itemizedlist>
