<db:section xml:id="containsDrag-prop">
<db:title>containsDrag : bool</db:title>
<db:fieldsynopsis>
<db:type>bool</db:type>
<db:varname>containsDrag</db:varname>
<db:modifier>writable</db:modifier>
<db:synopsisinfo role="access">public</db:synopsisinfo>
<db:synopsisinfo role="status">active</db:synopsisinfo>
<db:synopsisinfo role="threadsafeness">unspecified</db:synopsisinfo>
</db:fieldsynopsis>
<db:para>This property identifies whether the <db:link xlink:href="qml-qtquick-droparea.xml">DropArea</db:link> currently contains any dragged items.</db:para>
</db:section>
