<db:listitem>
<db:para>qtbase/src/plugins/platforms/minimal/</db:para>
</db:listitem>
<db:listitem>
<db:para>qtbase/src/plugins/platforms/minimalegl/</db:para>
</db:listitem>
</db:itemizedlist>
