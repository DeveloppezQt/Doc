<db:section xml:id="blurRadius-prop">
<db:title>blurRadius : qreal</db:title>
<db:fieldsynopsis>
<db:modifier>(Qt property)</db:modifier>
<db:type>qreal</db:type>
<db:varname>blurRadius</db:varname>
